@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Referans Girişi</h4>
                        <p class="card-subtitle mb-4">Referans ile ilgili temel özellikleri eksiksiz doldurmanız önemlidir.</p>

                        <form method="post">


                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="exampleInputName">İsim</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="İsim Girişi Yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputTitle">Ünvan</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Ünvan Girişi Yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputComment">Yorumlar</label>
                                <input type="text" class="form-control" id="exampleInputComment" asp-for="Comment" placeholder="Yorum Girişi Yapınız">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputImageUrl">Resim Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Resim Url Girişi Yapınız">
                            </div>




                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>

        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>




