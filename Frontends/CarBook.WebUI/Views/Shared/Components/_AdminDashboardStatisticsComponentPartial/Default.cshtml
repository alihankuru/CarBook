                    </div>
                    <div class="col-4 text-right">
                        <span class="text-white-50">@ViewBag.v6% <i class="mdi mdi-arrow-down"></i></span>
                    </div>
                </div>

                <div class="progress badge-soft-light shadow-sm" style="height: 7px;">
                    <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.v6%;"></div>
                </div>
            </div>
        </div>
    </div> <!-- end col-->
